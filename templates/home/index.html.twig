{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
   <nav>
   <h1> Accueil </h1>
      {% if app.user %}
         <a href="{{ path('app_logout') }}"> <h1> Deconnexion </h1> </a>

          <h2>Bienvenue {{ app.user.username }}</h2>

         <img src="https://cdn.discordapp.com/avatars/{{ app.user.discordId }}/{{ app.user.avatar }}.png" />
      {% else %}

      <a href="{{ path('app_login') }}"> <h1> Connexion </h1> </a>



      <a href="{{ path('app_register') }}"> <h1> Inscription </h1> </a>

      {% endif %}

   </nav>

<div class="example-wrapper">
<h1> Bienvenue sur la ligue allemande </h1>
</div>
{% endblock %}
